{
  "info": {
    "_postman_id": "avl-api-collection",
    "name": "AVL API",
    "description": "Collection for Self-balancing AVL Tree API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Child (AVL)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"id\": 1001,\n    \"name\": \"John Doe\",\n    \"age\": 10,\n    \"gender\": \"M\"\n}"
        },
        "url": {
          "raw": "http://localhost:8001/children/avl/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8001",
          "path": ["children", "avl", ""]
        },
        "description": "Create a new child record in the AVL tree (auto-balancing)"
      }
    },
    {
      "name": "Get Child by ID (AVL)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8001/children/avl/1001",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8001",
          "path": ["children", "avl", "1001"]
        },
        "description": "Retrieve a child's information by ID from the AVL tree"
      }
    },
    {
      "name": "List All Children (AVL)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8001/children/avl/?order=in",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8001",
          "path": ["children", "avl", ""],
          "query": [
            {
              "key": "order",
              "value": "in"
            }
          ]
        },
        "description": "List all children using in-order traversal (supports 'in', 'pre', 'post')"
      }
    },
    {
      "name": "Update Child (AVL)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"John Updated\",\n    \"age\": 11,\n    \"gender\": \"M\"\n}"
        },
        "url": {
          "raw": "http://localhost:8001/children/avl/1001",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8001",
          "path": ["children", "avl", "1001"]
        },
        "description": "Update an existing child's information in the AVL tree"
      }
    },
    {
      "name": "Delete Child (AVL)",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:8001/children/avl/1001",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8001",
          "path": ["children", "avl", "1001"]
        },
        "description": "Delete a child record from the AVL tree (auto-balancing)"
      }
    },
    {
      "name": "Get Tree Stats (AVL)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8001/children/avl/stats/tree",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8001",
          "path": ["children", "avl", "stats", "tree"]
        },
        "description": "Get statistics about the AVL tree (height, node count, balance factors, etc.)"
      }
    }
  ]
}
